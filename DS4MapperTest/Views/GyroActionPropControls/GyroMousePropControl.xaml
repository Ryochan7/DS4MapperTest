<UserControl x:Class="DS4MapperTest.Views.GyroActionPropControls.GyroMousePropControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:DS4MapperTest.Views.GyroActionPropControls"
             xmlns:local1="clr-namespace:DS4MapperTest.Views"
             xmlns:localConverters="clr-namespace:DS4MapperTest.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <localConverters:InvertBoolToVisibilityConverter x:Key="InvertBoolToVisibilityConverter"/>
    </UserControl.Resources>
    <DockPanel>
        <ScrollViewer DockPanel.Dock="Top">
            <StackPanel>
                <local1:GyroActionSelectControl x:Name="gyroSelectControl" />

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="Name" />
                    <TextBox Text="{Binding Name,UpdateSourceTrigger=LostFocus}" Width="200" Margin="8,0,0,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxBaseStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HighlightName}" Value="False">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="_Dead Zone" />
                    <TextBox Text="{Binding DeadZone, UpdateSourceTrigger=LostFocus, StringFormat='F2'}" Width="100" Margin="8,0,0,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxBaseStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HighlightDeadZone}" Value="False">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Label Content="dps" Margin="2,0,0,0" BorderBrush="{x:Null}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="Trigger Buttons" />
                    <ListView ItemsSource="{Binding TriggerButtonItems}" Height="100" Margin="8,0,0,0">
                        <ListView.View>
                            <GridView>
                                <GridView.Columns>
                                    <GridViewColumn Width="200" Header="Action">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DisplayString}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="50">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding Enabled}" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView.Columns>

                            </GridView>
                        </ListView.View>
                    </ListView>

                    <StackPanel Margin="8,0,0,0">
                        <Label Content="Used Triggers" HorizontalAlignment="Left" />
                        <TextBlock Text="{Binding GyroTriggerString}" Style="{StaticResource TextBlockDefault}" MinWidth="100" Margin="0,8,0,0" HorizontalAlignment="Left" />
                    </StackPanel>

                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="Trigger Cond" />
                    <ComboBox ItemsSource="{Binding GyroTriggerCondItems}" DisplayMemberPath="DisplayName"
                          SelectedValuePath="ChoiceValue" SelectedValue="{Binding GyroTriggerCondChoice}" MinWidth="100" Margin="8,0,0,0">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HighlightGyroTriggerCond}" Value="False">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="Trigger Activates (Ratchet)" />
                    <CheckBox IsChecked="{Binding GyroTriggerActivates}" Width="20" VerticalAlignment="Center" Margin="8,0,0,0">
                        <CheckBox.Style>
                            <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxBaseStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HighlightGyroTriggerActivates}" Value="False">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </CheckBox.Style>
                    </CheckBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="Real World Calibration" />
                    <hc:NumericUpDown Minimum="0.0" Maximum="500.0" Value="{Binding RealWorldCalibration}" DecimalPlaces="2"
      Increment="0.5" Width="100" Margin="8,0,0,0">
                        <hc:NumericUpDown.Style>
                            <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HighlightRealWorldCalibration}" Value="False">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </hc:NumericUpDown.Style>
                    </hc:NumericUpDown>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="In Game Sens" />
                    <hc:NumericUpDown Minimum="0.1" Maximum="10.0" Value="{Binding InGameSens}" DecimalPlaces="2"
Increment="0.1" Width="100" Margin="8,0,0,0">
                        <hc:NumericUpDown.Style>
                            <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HighlightInGameSens}" Value="False">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </hc:NumericUpDown.Style>
                    </hc:NumericUpDown>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="Acceleration Curve" />
                    <ComboBox ItemsSource="{Binding AccelCurveChoiceItems}" DisplayMemberPath="DisplayName"
      SelectedValuePath="Choice" SelectedValue="{Binding AccelCurveChoice}" MinWidth="200" Margin="8,0,0,0">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HighlightAccelCurve}" Value="False">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,8,0,0"
                            Visibility="{Binding AccelCurveUsed, Converter={StaticResource Boolean2VisibilityConverter}}">

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Min Sens X" HorizontalAlignment="Left" />

                            <hc:NumericUpDown Minimum="0.0" Maximum="100.0" DecimalPlaces="2" Increment="0.1"
Value="{Binding MinAccelXSens,FallbackValue='0.0'}" Margin="8,0,0,0">
                                <hc:NumericUpDown.Style>
                                    <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HighlightMinAccelXSens}" Value="False">
                                                <Setter Property="Opacity" Value="0.7" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </hc:NumericUpDown.Style>
                            </hc:NumericUpDown>

                            <Label Content="RWS" Margin="2,0,0,0" BorderBrush="{x:Null}" />

                            <Label Content="Min Sens Y" HorizontalAlignment="Left" Margin="8,0,0,0" />

                            <hc:NumericUpDown Minimum="0.0" Maximum="100.0" DecimalPlaces="2" Increment="0.1"
Value="{Binding MinAccelYSens,FallbackValue='0.0'}" Margin="8,0,0,0">
                                <hc:NumericUpDown.Style>
                                    <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HighlightMinYAccelSens}" Value="False">
                                                <Setter Property="Opacity" Value="0.7" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </hc:NumericUpDown.Style>
                            </hc:NumericUpDown>

                            <Label Content="RWS" Margin="2,0,0,0" BorderBrush="{x:Null}" />
                        </StackPanel>

                        
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <Label Content="Max Sens X" />

                        <hc:NumericUpDown Minimum="0.0" Maximum="100.0" DecimalPlaces="2" Increment="0.1"
Value="{Binding MaxAccelXSens,FallbackValue='1.0'}" Margin="8,0,0,0">
                            <hc:NumericUpDown.Style>
                                <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HighlightMaxAccelXSens}" Value="False">
                                            <Setter Property="Opacity" Value="0.7" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </hc:NumericUpDown.Style>
                        </hc:NumericUpDown>

                        <Label Content="RWS" Margin="2,0,0,0" BorderBrush="{x:Null}" />


                        <Label Content="Max Sens Y" HorizontalAlignment="Left" Margin="8,0,0,0" />

                        <hc:NumericUpDown Minimum="0.0" Maximum="100.0" DecimalPlaces="2" Increment="0.1"
Value="{Binding MaxAccelYSens,FallbackValue='1.0'}" Margin="8,0,0,0">
                            <hc:NumericUpDown.Style>
                                <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HighlightMaxAccelYSens}" Value="False">
                                            <Setter Property="Opacity" Value="0.7" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </hc:NumericUpDown.Style>
                        </hc:NumericUpDown>

                        <Label Content="RWS" Margin="2,0,0,0" BorderBrush="{x:Null}" />
                    </StackPanel>


                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">

                        <StackPanel Orientation="Horizontal">
                            <Label Content="Min Threshold" />

                            <hc:NumericUpDown Minimum="0.0" Maximum="500.0" DecimalPlaces="2" Increment="0.5"
Value="{Binding MinGyroThreshold,FallbackValue='0.0'}" Margin="8,0,0,0">
                                <hc:NumericUpDown.Style>
                                    <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HighlightMinGyroThreshold}" Value="False">
                                                <Setter Property="Opacity" Value="0.7" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </hc:NumericUpDown.Style>
                            </hc:NumericUpDown>

                            <Label Content="dps" Margin="2,0,0,0" BorderBrush="{x:Null}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" Visibility="{Binding UsesMaxThreshold, Converter={StaticResource InvertBoolToVisibilityConverter}, FallbackValue=Visible}">
                            <Label Content="Natural Midpoint (vHalf)" />
                            <hc:NumericUpDown Minimum="1.0" Maximum="500.0" DecimalPlaces="2" Increment="0.5"
Value="{Binding NaturalVHalf,FallbackValue='1.0'}" Margin="8,0,0,0">
                                <hc:NumericUpDown.Style>
                                    <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HighlightNaturalVHalf}" Value="False">
                                                <Setter Property="Opacity" Value="0.7" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </hc:NumericUpDown.Style>
                            </hc:NumericUpDown>

                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" Visibility="{Binding UsesMaxThreshold, Converter={StaticResource Boolean2VisibilityConverter}, FallbackValue=Visible}">
                            <Label Content="Max Threshold" />
                            <hc:NumericUpDown Minimum="0.0" Maximum="500.0" DecimalPlaces="2" Increment="0.5"
Value="{Binding MaxGyroThreshold,FallbackValue='1.0'}" Margin="8,0,0,0">
                                <hc:NumericUpDown.Style>
                                    <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HighlightMinGyroThreshold}" Value="False">
                                                <Setter Property="Opacity" Value="0.7" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </hc:NumericUpDown.Style>
                            </hc:NumericUpDown>

                            <Label Content="dps" Margin="2,0,0,0" BorderBrush="{x:Null}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0"
                                    Visibility="{Binding PowerCurveUsed, Converter={StaticResource Boolean2VisibilityConverter}, FallbackValue='Collapsed'}">

                            <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                                <Label Content="Power vRef" />
                                <hc:NumericUpDown Minimum="0.01" Maximum="500.0" DecimalPlaces="2" Increment="0.5"
Value="{Binding PowerCurveVRef,FallbackValue='1.0'}" Margin="8,0,0,0">
                                    <hc:NumericUpDown.Style>
                                        <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HighlightPowerCurveVRef}" Value="False">
                                                    <Setter Property="Opacity" Value="0.7" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </hc:NumericUpDown.Style>
                                </hc:NumericUpDown>

                                <Label Content="dps" Margin="2,0,0,0" BorderBrush="{x:Null}" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                                <Label Content="Power Exponent" />
                                <hc:NumericUpDown Minimum="0.01" Maximum="500.0" DecimalPlaces="2" Increment="0.5"
Value="{Binding PowerCurveExponent,FallbackValue='1.0'}" Margin="8,0,0,0">
                                    <hc:NumericUpDown.Style>
                                        <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HighlightPowerCurveExponent}" Value="False">
                                                    <Setter Property="Opacity" Value="0.7" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </hc:NumericUpDown.Style>
                                </hc:NumericUpDown>

                            </StackPanel>

                        </StackPanel>

                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0"
                            Visibility="{Binding StaticSensUsed, Converter={StaticResource Boolean2VisibilityConverter}}">
                    <Label Content="Sensitivity" />
                    <hc:NumericUpDown Minimum="0.0" Maximum="10.0" DecimalPlaces="1" Increment="0.1"
                                  Value="{Binding Sensitivity,FallbackValue='1.0'}" Margin="8,0,0,0">
                        <hc:NumericUpDown.Style>
                            <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HighlightSensitivity}" Value="False">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </hc:NumericUpDown.Style>
                    </hc:NumericUpDown>

                    <Label Content="RWS" Margin="2,0,0,0" BorderBrush="{x:Null}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="Vertical Scale" />
                    <hc:NumericUpDown Minimum="0.0" Maximum="10.0" DecimalPlaces="1" Increment="0.1"
                                  Value="{Binding VerticalScale,FallbackValue='1.0'}" Margin="8,0,0,0">
                        <hc:NumericUpDown.Style>
                            <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HighlightVerticalScale}" Value="False">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </hc:NumericUpDown.Style>
                    </hc:NumericUpDown>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="Invert" />
                    <ComboBox ItemsSource="{Binding InvertChoiceItems}" DisplayMemberPath="DisplayName"
                          SelectedValuePath="Choice" SelectedValue="{Binding InvertChoice}" MinWidth="100" Margin="8,0,0,0">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox" BasedOn="{StaticResource ComboBoxBaseStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HighlightInvert}" Value="False">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="Jitter Compensation" />
                    <CheckBox IsChecked="{Binding GyroJitterCompensation}" Width="20" VerticalAlignment="Center" Margin="8,0,0,0">
                        <CheckBox.Style>
                            <Style TargetType="CheckBox" BasedOn="{StaticResource CheckBoxBaseStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HighlightGyroJitterCompensation}" Value="False">
                                        <Setter Property="Opacity" Value="0.7" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </CheckBox.Style>
                    </CheckBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <GroupBox MinWidth="200">
                        <GroupBox.Header>
                            <CheckBox IsChecked="{Binding SmoothingEnabled}"
                                      HorizontalAlignment="Left" HorizontalContentAlignment="Left">
                                Use Smoothing
                            </CheckBox>
                        </GroupBox.Header>

                        <StackPanel IsEnabled="{Binding SmoothingEnabled}">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Presets" />

                                <ComboBox ItemsSource="{Binding SmoothPresetChoiceItems}" DisplayMemberPath="DisplayName"
      SelectedValuePath="Choice" SelectedValue="{Binding SmoothPresetChoice}" MinWidth="100" Margin="8,0,0,0">
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Label Content="1&#x20ac; MinCutoff" />
                                <hc:NumericUpDown Minimum="0.0" Maximum="10.0" DecimalPlaces="1" Increment="0.1"
                                  Value="{Binding SmoothingMinCutoff,FallbackValue='1.0'}" Margin="8,0,0,0">
                                    <hc:NumericUpDown.Style>
                                        <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HighlightSmoothingFilter}" Value="False">
                                                    <Setter Property="Opacity" Value="0.7" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </hc:NumericUpDown.Style>
                                </hc:NumericUpDown>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <Label Content="1&#x20ac; Beta" />
                                <hc:NumericUpDown Minimum="0.0" Maximum="1.0" DecimalPlaces="1" Increment="0.1"
                                  Value="{Binding SmoothingBeta,FallbackValue='1.0'}" Margin="8,0,0,0">
                                    <hc:NumericUpDown.Style>
                                        <Style TargetType="hc:NumericUpDown" BasedOn="{StaticResource NumericUpDownBaseStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HighlightSmoothingFilter}" Value="False">
                                                    <Setter Property="Opacity" Value="0.7" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </hc:NumericUpDown.Style>
                                </hc:NumericUpDown>
                            </StackPanel>

                        </StackPanel>
                    </GroupBox>
                </StackPanel>


            </StackPanel>
        </ScrollViewer>
        
    </DockPanel>
</UserControl>
